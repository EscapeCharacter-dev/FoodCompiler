				(*input)[lexer->Position] >= 'a' && (*input)[lexer->Position] <= 'z'
				|| (*input)[lexer->Position] >= 'A' && (*input)[lexer->Position] <= 'Z'
				|| (*input)[lexer->Position] >= '0' && (*input)[lexer->Position] <= '9'
				|| (*input)[lexer->Position] == '_')) {
				
				lexer->Position++;
			}
			const size count = lexer->Position - base;
			CopyRegion(lexer->Input, LexKeywordBuffer, base, count <= 255 ? count : 255);
